function efn_user_view_alter(array &$build, Drupal\Core\Entity\EntityInterface $entity, \Drupal\Core\Entity\Display\EntityViewDisplayInterface $display){
  if ($display->getComponent('member_for')) {
    $build['member_for'] = [
