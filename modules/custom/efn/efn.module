/**
 * Implements hook_help().
 */
function efn_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the efn module.
    case 'help.page.efn':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Helper functions for efn') . '</p>';
      return $output;

    default:
  }
}

